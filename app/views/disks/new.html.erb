<%= form_for(@disk, :remote => true) do |f| %>
  <div class="widget">
    <div class="whead">
      <h6><%= f.label :disk_spec_id, "Spec" %></h6>
    </div>
    <table cellpadding="0" cellspacing="0" width="100%" class="tDefault checkAll tMedia">
      <thead>
        <tr>
          <td width="130">Name</td>
          <td>Description</td>
          <td width="70">Size</td>
          <td width="70">Type</td>
          <td width="50">Select</td>
        </tr>
      </thead>
      <tfoot></tfoot>
      <tbody>
        <% @disk_specs.each do |spec| %>
          <tr>
            <td><%= spec.name %></td>
            <td><%= spec.description %></td>
            <td><%= spec.size / 1024 %>GB</td>
            <td><%= spec.type_to_string %></td>
            <td><%= f.radio_button :disk_spec_id, spec._id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="divider"><span></span></div>
  <%= f.label :name %>
  <%= f.text_field :name, :class => "clear", :placeholder => "Tom's Disk" %>
  <%= f.label :description %>
  <%= f.text_area :description, :rows => 8, :cols => "", :class => "auto" %>
  <div>
    <span class="floatR">
      <%= f.check_box :protected, :class => "check" %>
      <%= f.label :protected, :style => "float: none;" %>
    </span>
  </div>
<% end %>
