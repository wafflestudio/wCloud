<% render "default" %>

<div class="fluid">
  <!-- Media table -->
  <div class="widget check grid12">
    <div class="whead">
      <h6>Instances</h6>
    </div>
    <table cellpadding="0" cellspacing="0" width="100%" class="tDefault checkAll tMedia">
      <thead>
        <tr>
          <td><img src="/assets/Aquincum/elements/other/tableArrows.png" alt="" /></td>
          <td width="180">OS</td>
          <td>Name</td>
          <td width="70">State</td>
          <td width="100">IP</td>
          <td width="150" class="sortCol"><div>Created At<span></span></div></td>
          <td width="100">Actions</td>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <td colspan="7">
            <div class="itemActions">
              <label>Action:</label>
              <select class="styled">
                <option value="unknown">Select Action</option>
                <option value="stop">Stop</option>
                <option value="start">Start</option>
                <option value="reboot">Reboot</option>
                <option value="destroy">Destroy</option>
                <option value="forcestop">Force Stop</option>
                <option value="forcereboot">Force Reboot</option>
                <option value="restor">Restore</option>
                <option value="duplicate">Duplicate</option>
                <option value="snapshot">Snapshot</option>
              </select>
            </div>
            <div class="tPages">
              <%= paginate @instances %>
            </div>
          </td>
        </tr>
      </tfoot>
      <tbody>
        <% @instances.each do |instance| %>
          <tr>
            <td><input type="radio" name="checkRow" id="instance-<%= instance._id %>" /></td>
            <td>
              <a href="<%= template_path(instance.template) %>" title="<%= instance.template.description %>" class="lightbox">
                <img src="/assets/Aquincum/live/face3.png" alt="" style="vertical-align: middle" />
                <%= "#{instance.template.name}(#{instance.template.arch})" %>
              </a>
            </td>
            <td><%= link_to instance.name, instance_path(instance), :title => instance.description, :class => "lightbox" %></td>
            <td><%= instance.state_to_string %></td>
            <td><%= instance.networks.empty? ? "NULL" : instance.networks.first.ip %></td>
            <td><%= instance.created_at %></td>
            <td class="tableActs">
              <%= link_to '<span class="iconb" data-icon="&#xe271;"></span>'.html_safe, instance_path(instance), :class => "tablectrl_small bDefault tipS", :title => "Info" %>
              <%= link_to '<span class="iconb" data-icon="&#xe1f7;"></span>'.html_safe, edit_instance_path(instance), :class => "tablectrl_small bDefault tipS", :title => "Settings" %>
              <%= link_to '<span class="iconb" data-icon="&#xe136;"></span>'.html_safe, instance_path(instance), :class => "tablectrl_small bDefault tipS", :title => "Destroy", :confirm => "Are you sure?" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Chart -->
<div class="widget chartWrapper">
  <div class="whead"><h6>Charts</h6>
    <div class="titleOpt">
      <a href="#" data-toggle="dropdown"><span class="icos-cog3"></span></a>
      <ul class="dropdown-menu pull-right">
        <li><a href="#"><span class="icos-add"></span>Add</a></li>
        <li><a href="#"><span class="icos-trash"></span>Remove</a></li>
        <li><a href="#" class=""><span class="icos-pencil"></span>Edit</a></li>
        <li><a href="#" class=""><span class="icos-heart"></span>Do whatever you like</a></li>
      </ul>
    </div>
  </div>
  <div class="body"><div class="chart"></div></div>
</div>
