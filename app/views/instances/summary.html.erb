<div class="widget">
  <div class="whead">
    <h6><%= label_tag "Template" %></h6>
  </div>
  <table cellpadding="0" cellspacing="0" width="100%" class="tDefault checkAll tMedia">
    <thead>
      <tr>
        <td width="50">Logo</td>
        <td width="130">Name</td>
        <td>Description</td>
        <td width="50">Arch</td>
        <td width="70">Type</td>
        <td width="50">Select</td>
      </tr>
    </thead>
    <tfoot></tfoot>
    <tbody>
      <% @templates.each do |template| %>
        <tr>
          <td>
            <a href="<%= template_path(template) %>" title="<%= template.description %>" class="lightbox">
              <%= image_tag template.logo.url(:thumb), :style => "margin-top: 7px;" %>
            </a>
          </td>
          <td><%= template.name %></td>
          <td><%= template.description %></td>
          <td><%= template.arch %>bit</td>
          <td><%= template.user.nil? ? "Base" : "Custom" %></td>
          <td><input type="radio" checked /></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="divider"><span></span></div>
<div class="widget">
  <div class="whead">
    <h6><%= label_tag "Spec" %></h6>
  </div>
  <table cellpadding="0" cellspacing="0" width="100%" class="tDefault checkAll tMedia">
    <thead>
      <tr>
        <td width="130">Name</td>
        <td>Description</td>
        <td width="50">Ram</td>
        <td width="70">CPU</td>
        <td width="50">Select</td>
      </tr>
    </thead>
    <tfoot></tfoot>
    <tbody>
      <% @instance_specs.each do |spec| %>
        <tr>
          <td><%= spec.name %></td>
          <td><%= spec.description %></td>
          <td><%= spec.ram %>MB</td>
          <td><%= spec.core %>Core</td>
          <td><input type="radio" name="<%= spec._id %>" checked /></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="divider"><span></span></div>
<div class="widget">
  <div class="whead">
    <h6><label>Disk</label></h6>
  </div>
  <table cellpadding="0" cellspacing="0" width="100%" class="tDefault checkAll tMedia">
    <thead>
      <tr>
        <td width="130">Name</td>
        <td>Description</td>
        <td width="70">Size</td>
        <td width="50">Select</td>
      </tr>
    </thead>
    <tfoot></tfoot>
    <tbody>
      <% @disks.each do |disk| %>
        <tr>
          <td><%= disk.name %></td>
          <td><%= disk.description %></td>
          <td><%= disk.size / 1024 %>GB</td>
          <td><input type="checkbox" name="<%= disk._id %>" checked /></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="divider"><span></span></div>
<div class="widget">
  <div class="whead">
    <h6><label>Network</label></h6>
  </div>
  <table cellpadding="0" cellspacing="0" width="100%" class="tDefault checkAll tMedia">
    <thead>
      <tr>
        <td width="130">Name</td>
        <td>Description</td>
        <td width="70">IP</td>
        <td width="70">MAC</td>
        <td width="50">Select</td>
      </tr>
    </thead>
    <tfoot></tfoot>
    <tbody>
      <% @networks.each do |network| %>
        <tr>
          <td><%= network.name %></td>
          <td><%= network.description %></td>
          <td><%= network.ip %></td>
          <td><%= network.mac %></td>
          <td><input type="checkbox" name="<%= network._id %>" checked /></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="divider"><span></span></div>
<%= label_tag :name %>
<%= text_field_tag :name, @instance.name, {:class => "clear"} %>
<%= label_tag :description %>
<%= text_area_tag :description, @instance.description, {:rows => 8, :cols => "", :class => "auto"} %>
<div>
  <span class="floatR">
    <%= check_box_tag :protected, "", {:class => "check", :selected => @instance.protected} %>
    <%= label_tag :protected, "Protected", {:style => "float: none;"} %>
  </span>
</div>
