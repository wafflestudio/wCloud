<% if @template.instance? %>
  <div class="widget">
    <div class="whead">
      <h6><%= label_tag "Instance" %></h6>
    </div>
    <table style="width: 100%" class="tDefault checkAll tMedia">
      <thead>
        <tr>
          <td style="width: 180px">OS</td>
          <td>Name</td>
          <td style="width: 70px">State</td>
          <td style="width: 150px">Created At</td>
        </tr>
      </thead>
      <tfoot></tfoot>
      <tbody>
        <tr>
          <td>
            <a href="<%= template_path(@template.instance.template) %>" title="<%= @template.instance.template.description %>">
              <%= image_tag @template.instance.template.logo.url(:thumb), :style => "vertical-align: middle;" %>
              <%= "#{@template.instance.template.name}(#{@template.instance.template.arch})" %>
            </a>
          </td>
          <td><%= link_to @template.instance.name, instance_path(@template.instance), :title => @template.instance.description %></td>
          <td><%= @template.instance.state_to_string %></td>
          <td><%= @template.instance.created_at %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="divider"><span></span></div>
<% end %>
<%= label_tag :name %>
<%= text_field_tag :name, @template.name, {:class => "clear"} %>
<%= label_tag :description %>
<%= text_area_tag :description, @template.description, {:rows => 8, :cols => "", :class => "auto"} %>
<div>
  <span class="floatR">
    <%= check_box_tag :active, "", {:class => "check", :checked => @template.active} %>
    <%= label_tag :active, "Active", {:style => "float: none;"} %>
    <%= check_box_tag :protected, "", {:class => "check", :checked => @template.protected} %>
    <%= label_tag :protected, "Protected", {:style => "float: none;"} %>
  </span>
</div>
