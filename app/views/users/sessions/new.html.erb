<!-- Login wrapper begins -->
<div class="loginWrapper">

  <!-- Current user form -->
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => "login"}) do |f| %>
    <div class="loginPic">
      <a href="#">
        <img src="/assets/Aquincum/userLogin.png" alt="" />
      </a>
      <div class="loginActions">
        <div><a href="#" title="New user" class="logleft flip"></a></div>
        <div><a href="#" title="Forgot password?" class="logright"></a></div>
      </div>
    </div>

    <%= f.text_field :email, :autofocus => true, :placeholder => "Confirm your email", :class => "loginEmail" %>
    <%= f.password_field :password, :placeholder => "Password", :class => "loginPassword" %>

    <div class="logControl">
      <div class="memory"><%= f.check_box :remember_me, :checked => true %><%= f.label :remember_me %></div>
      <%= f.submit "Signin", :class => "buttonM bBlue" %>
    </div>
  <% end %>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:id => "recover"}) do |f| %>
        <div class="loginPic">
            <a href="#" title=""><img src="/assets/Aquincum/userLogin2.png" alt="" /></a>
            <div class="loginActions">
                <div><a href="#" title="Signin" class="logback flip"></a></div>
                <div><a href="#" title="Forgot password?" class="logright"></a></div>
            </div>
        </div>
            
        <%= f.text_field :email, :autofocus => true, :placeholder => "Your email", :class => "loginEmail" %>
        <%= f.password_field :password, :placeholder => "Password", :class => "loginPassword" %>
        <%= f.password_field :password_confirmation, :placeholder => "Password confirmation", :class => "loginPassword" %>
        
        <div class="logControl">
          <%= f.submit "Signup", :class => "buttonM bBlue" %>
        </div>
  <% end %>

</div>
<!-- Login wrapper ends -->
