    </a>
    </li>
    <li>
    <a href="<%= templates_path %>" title="" class="<%= "active" if params[:controller] == "templates" %>">
      <img src="/assets/Aquincum/icons/mainnav/other.png" alt="" />
      <span>Templates</span>
    </a>
    </li>
    <li>
    <a href="<%= networks_path %>" title="" class="<%= "active" if params[:controller] == "networks" %>">
      <img src="/assets/Aquincum/icons/mainnav/ui.png" alt="" />
      <span>Networks</span>
    </a>
    </li>
    <li>
    <a href="<%= usages_path %>" title="" class="<%= "active" if params[:controller] == "usages" %>">
      <img src="/assets/Aquincum/icons/mainnav/messages.png" alt="" />
      <span>Messages</span>
    </a>
    </li>
    <li>
    <a href="#" title="">
      <img src="/assets/Aquincum/icons/mainnav/statistics.png" alt="" />
      <span>Statistics</span>
    </a>
    </li>
